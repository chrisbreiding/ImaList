clearfix() {
  &:before,
  &:after {
    content: "";
    display: table;
  }
  &:after {
    clear: both;
  }
}

fill-container() {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

buttonize-background(color) {
  background: color;

  &:hover,
  &:focus,
  &:active {
    background: darken(color, 20%);
  }
}

buttonize-color(color) {
  color: color;

  &:hover,
  &:focus,
  &:active {
    color: darken(color, 20%);
  }
}
