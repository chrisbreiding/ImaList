.lists,
.items {
  bottom: 2.4em;
  position: absolute;
  top: 2.4em;
  transition: all .5s ease;
  width: 100%;

  li {
    border-top: solid 1px #e3e3e3;

    &:first-child {
      border-top: none;
    }
  }
}

.lists {
  left: 0;
}

.items {
  left: 100%;
}

.showing-items {
  .lists {
    left: -100%;
  }

  .items {
    left: 0;
  }
}
