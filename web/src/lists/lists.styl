.lists li {
  options(1);

  .name {
    box-sizing: border-box;
    display: block;
    height: unit;
    padding: .2em unit .2em .7em;
  }

  span.name {
    cursor: pointer;
    line-height: unit - .4em;

    &:hover,
    &:focus,
    &:active {
      background: darken(light-color, 10%);
      color: action-color;
    }
  }

  input.name {
    border: solid primary-color 0;
    border-radius: 0;
    line-height: 1;
    outline: none;
    text-overflow: ellipsis;
    transition: all .25s ease;
    width: 100%;

    &:focus {
      border-width: .2em;
      padding-top: 0;
      padding-bottom: 0;
      padding-left: .5em;
    }
  }
}
