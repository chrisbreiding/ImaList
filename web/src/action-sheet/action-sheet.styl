.action-sheet {
  background: rgba(0, 0, 0, 0.7);
  fill-container();
  opacity: 0;
  transition: all .25s ease;

  .container {
    background: light-color;
    bottom: -200px;
    box-sizing: border-box;
    left: 0;
    padding: .5em;
    position: absolute;
    transition: all .25s ease;
    width: 100%;

    button {
      display: block;
      padding-top: .5em;
      padding-bottom: .5em;
      width: 100%;
    }

    .confirm {
      buttonize-background(error-color);
    }

    .cancel {
      buttonize-background(neutral-color);
      margin-top: .5em;
    }
  }

  &.show {
    opacity: 1;

    .container {
      bottom: 0;
    }
  }
}
