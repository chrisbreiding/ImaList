.action-sheet {
  background: rgba(0, 0, 0, 0.7);
  @extend .fill-container;
  opacity: 0.01;
  z-index: -1;

  .container {
    background: light-color;
    bottom: -200px;
    box-sizing: border-box;
    left: 0;
    padding: .5em;
    position: absolute;
    width: 100%;

    button {
      display: block;
      padding-top: .5em;
      padding-bottom: .5em;
      width: 100%;
    }

    .confirm {
      buttonize-background(error-color);
    }

    .cancel {
      buttonize-background(neutral-color);
      margin-top: .5em;
    }
  }

  &,
  & .container {
    transition: all .25s ease;
  }

  &.action-sheet-showing {
    opacity: 1;
    z-index: 100;

    .container {
      bottom: 0;
    }
  }
}
