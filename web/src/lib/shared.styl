header {
  background: primary-color;
  box-sizing: border-box;
  height: unit;
  line-height: unit;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;

  h1 {
    color: light-color;
    @extend .fill-container;
    line-height: unit;
    text-align: center;
  }

  button {
    buttonize-color(light-color);
    @extend .icon-button;
    position: absolute;
  }
}

.lists,
.items {
  background: light-color;
  bottom: 0;
  position: absolute;
  top: 0;
  transition: all .35s ease-out;
  width: 100%;

  ul {
    bottom: unit;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    position: absolute;
    top: unit;
    width: 100%;
  }

  li {
    border-top: solid 1px #e3e3e3;

    .remove {
      buttonize-background(error-color);
    }

    &:first-child {
      border-top: none;
    }
  }
}

.lists {
  left: 0;
}

.items {
  left: 100%;
}

.showing-items {
  .lists {
    left: -100%;
  }

  .items {
    left: 0;
  }
}

@media screen and (min-width: 550px) {
  .app {
    display: -webkit-flex;
    display: flex;
  }

  list-width = 250px;

  .showing-items .lists,
  .lists {
    -webkit-flex-shrink: 0;
    flex-shrink: 0;
    left: 0;
    position: relative;
    width: list-width;

    footer {
      width: list-width;
    }

    li.is-selected {
      background: darken(light-color, 10%);
      color: action-color;
    }
  }

  .showing-items .items,
  .items {
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    position: relative;

    header {
      display: none;
    }
  }
}

footer {
  background: light-color;
  border-top: solid 1px primary-color;
  bottom: 0;
  box-sizing: border-box;
  height: unit;
  position: fixed;
  width: 100%;

  button {
    buttonize-color(primary-color);
    @extend .icon-button;
  }
}
