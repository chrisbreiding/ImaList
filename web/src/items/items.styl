.items {
  li {
    position: relative;
    overflow: hidden;
  }

  .toggle-checked,
  .toggle-options {
    buttonize-color(#b7b7b7);
    @extend .icon-button;
    position: absolute;
  }

  .toggle-checked {
    top: 0;
    left: 0;
  }

  .name {
    background: none;
    border: solid #b7b7b7 0;
    border-radius: 0;
    box-sizing: border-box;
    display: block;
    height: 2.4em;
    line-height: 1;
    outline: none;
    padding: .3em 2.4em;
    transition: all .25s ease;
    width: 100%;

    &:focus {
      border-width: .3em;
      padding: 0 2.1em;
    }
  }

  .checked {
    .toggle-checked {
      buttonize-color(action-color);
    }

    .name {
      color: #979797;
    }
  }

  .toggle-options {
    top: 0;
    right: 0;
  }

  option-width = 2.4em;
  num-options = 1;
  full-width = option-width * num-options;

  .options {
    height: 2.4em;
    position: absolute;
    top: 0;
    right: -1 * full-width;
    transition: all .25s ease;
    width: full-width;

    button {
      buttonize-background(error-color);
      @extend .icon-button;
    }
  }

  .showing-options {
    .toggle-options {
      right: full-width + 1em;
      -webkit-transform: rotate(90deg);
      transform: rotate(90deg);
    }

    .options {
      right: 0;
    }
  }
}
