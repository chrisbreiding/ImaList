.items {
  li {
    clearfix();
  }

  .toggle-checked {
    color: #b7b7b7;
    display: block;
    float: left;
    height: 2.4em;
    line-height: 2.4em;
    outline: none;
    opacity: 0.7;
    padding: 0;
    text-align: center;
    width: 2.4em;

    &:hover,
    &:focus {
      opacity: 1.0;
    }
  }

  .name {
    display: block;
    padding: .5em .7em;
  }

  .checked {
    .toggle-checked {
      color: primary-color;
      opacity: 1.0;

      &:hover,
      &:focus {
        opacity: 0.7;
      }
    }

    .name {
      color: #979797;
    }
  }
}
