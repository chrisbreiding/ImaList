.items {
  li {
    options(1);
  }

  .toggle-checked {
    buttonize-color(#b7b7b7);
    @extend .icon-button;
    left: 0;
    position: absolute;
    top: 0;
  }

  .editing .toggle-checked {
    left: -(unit);
  }

  .name {
    background: none;
    border: solid primary-color 0;
    border-radius: 0;
    box-sizing: border-box;
    display: block;
    outline: none;
    text-overflow: ellipsis;
    transition: all .25s ease;
    width: 100%;

    &:focus {
      border-width: .2em;
    }
  }

  input.name {
    height: unit;
    line-height: 1;
    padding: .2em unit;

    &:focus {
      padding: .5em (unit + .6em) .5em .6em;
    }
  }

  textarea.name {
    display: none;
    min-height: 3 * unit;
    line-height: 1.5;
    padding: .5em (unit + .6em) .5em .6em;
  }

  .multiline {
    input.name {
      display: none;
    }

    textarea.name {
      display: block;
    }
  }

  .checked {
    .toggle-checked {
      buttonize-color(action-color);
    }

    .name {
      color: #979797;
    }
  }

  .toggle-multiline {
    buttonize-background(primary-color);
    @extend .icon-button;
    position: absolute;
    right: -(unit);
    top: 0;
    transition: all .25s ease;
  }

  .editing .toggle-multiline {
    right: 0;
  }
}
