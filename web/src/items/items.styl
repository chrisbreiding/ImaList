.items {
  li {
    position: relative;
    overflow: hidden;
  }

  .toggle-checked,
  .toggle-options {
    buttonize-color(#b7b7b7);
    display: block;
    height: 2.4em;
    line-height: 2.4em;
    outline: none;
    padding: 0;
    position: absolute;
    text-align: center;
    width: 2.4em;
  }

  .toggle-checked {
    top: 0;
    left: 0;
  }

  .name {
    background: none;
    border: solid #b7b7b7 0;
    border-radius: 0;
    box-sizing: border-box;
    display: block;
    height: 2.4em;
    line-height: 1;
    outline: none;
    padding: .3em 2.4em;
    transition: all .25s ease;
    width: 100%;

    &:focus {
      border-width: .3em;
      padding: 0 2.1em;
    }
  }

  .checked {
    .toggle-checked {
      buttonize-color(action-color);
    }

    .name {
      color: #979797;
    }
  }

  .toggle-options {
    top: 0;
    right: 0;
  }

  options-width = 2.4em;

  .options {
    height: 2.4em;
    position: absolute;
    top: 0;
    right: -1 * options-width;
    transition: all .25s ease;
    width: options-width;

    button {
      buttonize-background(error-color);
      height: 2.4em;
      line-height: 2.4em;
      padding: 0;
      width: 2.4em;
    }
  }

  .showing-options {
    .toggle-options {
      right: options-width;
      -webkit-transform: rotate(90deg);
      transform: rotate(90deg);
    }

    .options {
      right: 0;
    }
  }
}
